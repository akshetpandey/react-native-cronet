{
  "name": "react-native-cronet",
  "description": "Cronet is the networking stack of Chromium put into a library for use on mobile. This module allows you to use the Cronet stack for your react native apps.",
  "title": "React Native Cronet",
  "version": "0.1.0",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "format:js": "eslint --fix {.,**}/*.js",
    "format:json": "prettier --write {.,**}/*.json",
    "format:md": "prettier --write {.,**}/*.md",
    "format:ts": "eslint --fix **/*.tsx",
    "format": "npm-run-all format:*",
    "lint": "yarn tsc --noEmit && yarn eslint ./src --ext .ts,.tsx",
    "build": "yarn tsc",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akshetpandey/react-native-cronet.git",
    "baseUrl": "https://github.com/akshetpandey/react-native-cronet"
  },
  "homepage": "https://github.com/akshetpandey/react-native-cronet#readme",
  "keywords": [
    "react-native",
    "cronet",
    "network",
    "quic"
  ],
  "author": {
    "name": "Akshet Pandey",
    "email": "github@akshetpandey.com"
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "readmeFilename": "README.md",
  "peerDependencies": {
    "react": "^16.8.6",
    "react-native": ">=0.60.5 <1.0.x"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/react": "16.9.1",
    "@types/react-native": "0.60.3",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "babel-eslint": "10.0.2",
    "babel-jest": "^24.0.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-native": "3.7.0",
    "husky": "^3.0.0",
    "jest": "24.8.0",
    "lint-staged": "^9.0.1",
    "metro-react-native-babel-preset": "0.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-native": "github:facebook/react-native#master",
    "typescript": "3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
